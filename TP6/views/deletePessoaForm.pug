extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Apagar Pessoa: #{p.id}

    .w3-container
        img.w3-left.w3-circle(src="/images/student.png" alt="Avatar" width="100")
        ul.w3-ul.w3-card-4
            if p.nome
                li #[b Nome:] #{p.nome}
            if p.idade
                li #[b Idade:] #{p.idade}
            if p.sexo
                li #[b Sexo:] #{p.sexo}
            if p.BI
                li #[b BI:] #{p.BI}
            if p.CC
                li #[b CC:] #{p.CC}
            if p.descrição
                li #[b Descrição:] #{p.descrição}

        button.w3-btn.w3-round.w3-margin.w3-green
            a(href="/pessoas/delete/"+ p.id + "/confirm") Confirm
        button.w3-btn.w3-round.w3-margin.w3-red
            a(href="/") Cancel
    footer.w3-container.w3-teal
      h5 Generated by RPCW2023 in #{d} - #[a(href="/") Return]




