extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Pessoa Record: #{pessoa.id}

    .w3-container
        img.w3-left.w3-circle(src="/images/student.png" alt="Avatar" width="100")
        ul.w3-ul.w3-card-4
            if pessoa.id
                li #[b Id:] #{pessoa.id}
            if pessoa.nome
                li #[b Nome:] #{pessoa.nome}
            if pessoa.idade
                li #[b Idade:] #{pessoa.idade}
            if pessoa.sexo
                li #[b Sexo:] #{pessoa.sexo}
            if pessoa.BI
                li #[b BI:] #{pessoa.BI}
            if pessoa.CC
                li #[b CC:] #{pessoa.CC}
            if pessoa.descrição
                li #[b Descrição:] #{pessoa.descrição}
            if pessoa.morada
                if pessoa.morada.cidade
                    li #[b Cidade onde mora:] #{pessoa.morada.cidade}
                if pessoa.morada.distrito
                    li #[b Distrito onde mora:] #{pessoa.morada.distrito}
            if pessoa.profissao
                li #[b Profissão:] #{pessoa.profissao}
            if pessoa.partido_politico
                if pessoa.partido_politico.party_abbr
                    li #[b Abreviatura Partido Político:] #{pessoa.partido_politico.party_abbr}
                if pessoa.partido_politico.party_name
                    li #[b Nome Partido Político:] #{pessoa.partido_politico.party_name}
            if pessoa.religiao
                li #[b Religião:] #{pessoa.religiao}
            if pessoa.marca_carro
                li #[b Marca Carro:] #{pessoa.marca_carro}

        if pessoa.desportos
            p #[b Desportos]
            ul.w3-ul.w3-card-4
                each desp in pessoa.desportos
                    li=desp

        if pessoa.animais
            p #[b Animais]
            ul.w3-ul.w3-card-4
                each animal in pessoa.animais
                    li=animal
        if pessoa.figura_publica_pt
            p #[b Figuras Públicas Portuguesas]
            ul.w3-ul.w3-card-4
                each figura in pessoa.figura_publica_pt
                    li=figura

        if pessoa.destinos_favoritos
            p #[b Destinos Favoritos]
            ul.w3-ul.w3-card-4
                each destino in pessoa.destinos_favoritos
                    li=destino

        if pessoa.atributos
            p #[b Atributos]
            ul.w3-ul.w3-card-4
                if pessoa.atributos.fumador
                    li #[b Fumador:] #{pessoa.atributos.fumador}
                if pessoa.atributos.gosta_cinema
                    li #[b Gosta de cinema:] #{pessoa.atributos.gosta_cinema}
                if pessoa.atributos.gosta_viajar
                    li #[b Gosta de viajar:] #{pessoa.atributos.gosta_viajar}
                if pessoa.atributos.acorda_cedo
                    li #[b Acorda cedo:] #{pessoa.atributos.acorda_cedo}
                if pessoa.atributos.gosta_ler
                    li #[b Gosta de ler:] #{pessoa.atributos.gosta_ler}
                if pessoa.atributos.gosta_musica
                    li #[b Gosta de Música:] #{pessoa.atributos.gosta_musica}
                if pessoa.atributos.gosta_comer
                    li #[b Gosta de Comer:] #{pessoa.atributos.gosta_comer}
                if pessoa.atributos.gosta_animais_estimacao
                    li #[b Gosta de animais de estimação:] #{pessoa.atributos.gosta_animais_estimacao}
                if pessoa.atributos.gosta_dancar
                    li #[b Gosta de dançar:] #{pessoa.atributos.gosta_dancar}
                if pessoa.atributos.comida_favorita
                    li #[b Comida Favorita:] #{pessoa.atributos.comida_favorita}

    footer.w3-container.w3-teal
      h5 Generated by RPCW2023 in #{d} - #[a(href="/") Return]




