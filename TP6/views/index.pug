extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 People List #[a.w3-btn.w3-round.w3-grey(href="/pessoas/registo") + ]
    .w3-container
      table.w3-table-all
        tr
          th id
          th Nome
          th Sexo
          th Idade
          th BI/CC
          th Profiss√£o

        each s in lista_pessoas
          tr
            td= s.id
            td
              a(href="/pessoas/"+s.id)= s.nome
            td= s.sexo
            td= s.idade
            if s.CC
                td= s.CC
            else
                td= s.BI
            td
            td= s.profissao
            td
              button.w3-btn.w3-round.w3-indigo.w3-margin-right
                a(href="/pessoas/edit/" + s.id) Edit
              button.w3-btn.w3-round.w3-indigo.w3-margin-right
                a(href="/pessoas/delete/" + s.id) Delete

    footer.w3-container.w3-teal
      h5 Generated by RPCW2023 in #{d}

